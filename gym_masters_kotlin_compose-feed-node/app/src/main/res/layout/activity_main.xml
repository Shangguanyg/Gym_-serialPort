<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainHorizontalScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/mainLinearLayout">

        </LinearLayout>

    </HorizontalScrollView>

    <ExpandableListView
        android:id="@+id/exlist_lol"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:childDivider="#D5D5D5"
        android:clipToPadding="false"
        android:fitsSystemWindows="false"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_inset_spacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 动态根据 WindowInsets 设置高度的底部占位 View，用来填充导航栏 / 手势栏区域背景，避免出现黑条 -->
    <View
        android:id="@+id/nav_inset_spacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
            
    
    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Money: $300"
        android:textSize="20sp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"/>
   
   
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/start"
            android:text="Tap to Start!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"/>

        <ImageView
            android:id="@+id/bike"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bike"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/packageNorm"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/packagenorm"/>

        <ImageView
            android:id="@+id/packageRed"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/packagered"/>

        <ImageView
            android:id="@+id/nail"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/nail"/>

        <ImageView
            android:id="@+id/taxi"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/taxi"/>

    </FrameLayout>

            
</androidx.constraintlayout.widget.ConstraintLayout>
