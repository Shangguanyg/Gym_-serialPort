<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basiccontent.SpecialChartActivity">

    <TextView
        android:id="@+id/rolltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="静态平衡测试"
        android:textSize="30sp"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/startStaticTest"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="开始测试"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rolltext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/stopStaticTest"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="结束测试"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"
        app:layout_constraintTop_toBottomOf="@id/startStaticTest"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/testTime"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="测试计时： 0"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/stopStaticTest"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/testScore"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="本次测试得分为： 0"
        android:textSize="30sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/testTime"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="重量： 0"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/testScore"
        app:layout_constraintEnd_toEndOf="parent"/>


    <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
        android:id="@+id/AAChartView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/testTime"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>